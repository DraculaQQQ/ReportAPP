<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="@drawable/gradient_background">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Report an issue"
            android:id="@+id/textView"
            android:autoText="false"
            android:layout_gravity="center"
            android:textColor="#FDAC00"/>
    <TextView
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Subject"
            android:id="@+id/textView2"
            android:layout_gravity="center"
            />
    <Spinner

            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:focusable="true"
            android:layout_gravity="center"
            android:spinnerMode="dropdown"
            />
    <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title"
            android:id="@+id/textView3"
            android:layout_gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:focusable="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Description"
            android:id="@+id/textView4"
            android:layout_gravity="center"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="What seems to be the issue? Describe it..."
            android:textColorHint="@drawable/description_hint"
            android:id="@+id/editText2"
            />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take picture of the issue"
            android:onClick="pictureButton"
            android:id="@+id/button" android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send issue"
            android:onClick="sendButton"
            android:id="@+id/button2" android:layout_gravity="center_horizontal"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add location to your ticket"
            android:id="@+id/checkBox"/>
</LinearLayout>

